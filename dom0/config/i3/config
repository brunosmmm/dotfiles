bindsym XF86AudioRaiseVolume exec --no-startup-id /home/bruno/.local/bin/pulseaudio-ctl up 10
bindsym XF86AudioLowerVolume exec --no-startup-id /home/bruno/.local/bin/pulseaudio-ctl down 10
bindsym XF86AudioMute exec --no-startup-id /home/bruno/.local/bin/pulseaudio-ctl mute

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

set $Locker dm-tool lock && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
  bindsym l exec --no-startup-id $Locker, mode "default"
  bindsym e exec --no-startup-id i3-msg exit, mode "default"
  bindsym s exec --no-startup-id systemctl suspend, mode "default"
  bindsym h exec --no-startup-id systemctl hibernate, mode "default"
  bindsym r exec --no-startup-id systemctl reboot, mode "default"
  bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+Print mode "$mode_system"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command /home/bruno/.local/bumblebee-status/bumblebee-status -m pasink pasource brightness cpu battery date time -p time.format="%H:%M CW %V" date.format="%a, %b %d %Y" -t gruvbox-powerline 
}

# restore layout
exec --no-startup-id "i3-msg 'workspace 10:qubes; append_layout /home/bruno/.config/i3/qubes.json'"

